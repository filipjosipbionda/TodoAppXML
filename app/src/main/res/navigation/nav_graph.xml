<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/TodoListFragment">

    <fragment
        android:id="@+id/TodoListFragment"
        android:name="com.bingugi.todoapp.ui.todolist.TodoListFragment"
        android:label="@string/main_fragment_label"
        tools:layout="@layout/todo_list_fragment">

        <action
            android:id="@+id/action_MainFragment_to_AddTodoFragment"
            app:destination="@id/AddTodoFragment" />
    </fragment>
    <fragment
        android:id="@+id/AddTodoFragment"
        android:name="com.bingugi.todoapp.ui.addtodo.AddTodoFragment"
        android:label="@string/add_todo_fragment_label"
        tools:layout="@layout/add_todo_fragment">

        <action
            android:id="@+id/action_AddTodoFragment_to_MainFragment"
            app:destination="@id/TodoListFragment" />
    </fragment>
</navigation>